{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 800,
  "width": 1000,
  "data": {
    "url": "https://raw.githubusercontent.com/jeeannt/FIT3179/main/Countries%20Population%20from%201995%20to%202020.csv"
  },
  
  "params": [
    {
      "name": "Continent_selection",
      "value": "Oceania",
      "bind": {
      "input": "select",
      "options": [
        null,
        "Africa",
        "Asia",
        "Europe",
        "North America",
        "Oceania",
        "South America"
      ],
      "labels":[
        "Show All",
        "Africa",
        "Asia",
        "Europe",
        "North America",
        "Oceania",
        "South America"
    ],
    "name": "Continent_selection: "
    } 
  }
],
  "transform": [
    {"filter": "Continent_selection == null || datum.Continent == Continent_selection"}],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "nominal"
    },
    "y": {
      "field": "Population",
      "type": "quantitative"
    },
    "color": {
      "field": "Country", 
      "type": "nominal"},

    "tooltip": [
      {"field": "Continent", "type": "nominal"},
        {"field": "Country", "type": "nominal"},
        {"field": "Year", "type": "quantitative", "format": ","}, 
        {"field": "Population", "type": "quantitative", "format": ","},
        {"field": "Yearly % Change", "type": "quantitative", "format": ","},
        {"field": "Density (P/KmÂ²)", "type": "quantitative"} ]
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": true
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "nominal"
        },
        "y": {
          "field": "Population",
          "type": "quantitative"
        },
        "color": {
          "field": "Country", 
          "type": "nominal"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
        },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"}, 
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'India' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'United States of America' || datum['Country'] == 'Mexico'",
            "value": 1 },
            "value": 0 }
      }
    }
  ]
}
