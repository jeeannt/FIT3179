{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "data": { "url": "https://raw.githubusercontent.com/jeeannt/FIT3179/main/population_by_country_2020.csv"},
    "transform": [
        {
            "filter": {"field": "Death Rate", "valid": "true"}
          },
      {
        "window": [
          {
            "op": "rank",
            "as": "rank"
          }
        ],
        "sort": [
          {
            "field": "Fert Rate",
            "order": "descending"
          }
        ]
      },
      {
        "filter": "datum.rank < 11"
      }],
    "config": {
    "view": {"stroke": "transparent" },
    "axis": {"grid":false}
    },
    "spacing": 0,
    "hconcat": [{
    "title": "Fertility",
    "mark": "bar",
    "width": 350,
    "encoding": {
    "y": {
    "field": "Country (or dependency)",
    "type": "nominal",
    "axis": null
    },
    "x": {
    "field": "Fert Rate",
    "type": "quantitative",
    "sort": "descending",
    "scale": {"domain": [0, 15]}
    },
    "tooltip": [
        {
          "field": "Country (or dependency)",
          "type": "nominal",
          "title": "Country"
        },
        {
          "field": "Fert Rate",
          "type": "quantitative",
          "title": "Fertility Rate"
        },
        {
            "field": "Death Rate",
            "type": "quantitative"
          }
      ]
    }
    }, {
    "width": 80,
    "mark": {
    "type": "text",
    "align": "center"
    },
    "encoding": {
    "y": {
    "field": "Country (or dependency)", 
    "type": "nominal", 
    "axis": null
    },
    "text": {
    "field": "Country (or dependency)", 
    "type": "nominal"
    }
    }
    }, {
    "title": "Death",
    "mark": "bar",
    "width": 350,
    "encoding": {
    "y": {
    "field": "Country (or dependency)", "title": null,
    "type": "nominal",
    "axis": null
    },
    "x": {
    "field": "Death Rate",
    "type":"quantitative",
    "scale": {"domain": [0, 15]}
    },
    "color": {
    "field": "Death",
    "type": "ordinal",
    "legend": null
    },
    "tooltip": [
        {
          "field": "Country (or dependency)",
          "type": "nominal",
          "title": "Country"
        },
        {
          "field": "Fert Rate",
          "type": "quantitative",
          "title": "Fertility Rate"
        },
        {
            "field": "Death Rate",
            "type": "quantitative"
          }
      ]
    }
    }]
    }