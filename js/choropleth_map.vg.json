{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 500,
    "projection": {"type": "equirectangular"},
    "params": [
      {
        "name": "Year_selection",
        "value": 1955,
        "bind": {
          "input": "range",
          "min": 1955,
          "max": 2020,
          "step": 5,
          "name": "Year:  "
        }
      }
    ],
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "note"
          }
        ],
        "mark": {
          "type": "geoshape",
          "fill": "#ddd",
          "stroke": "white",
          "strokeWidth": 1
        },
        "encoding": {"tooltip": {"field": "note"}}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/jeeannt/FIT3179/main/Countries%20Population%20from%201995%20to%202020.csv"
        },
        "transform": [
          {
            "lookup": "Country",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_admin_0_countries"
                }
              },
              "key": "properties.NAME"
            },
            "as": "geo"
          },
          {"filter": "datum.Year == Year_selection"}
        ],
        "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
        "encoding": {
          "shape": {"field": "geo", "type": "geojson"},
          "color": {
            "field": "Population",
            "type": "quantitative",
            "scale": {
              "type": "log",
              "domain": [400000, 1000000000],
              "scheme": "reds"
            },
            "legend": {"format": ".2s"}
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Population", "type": "quantitative", "format": ","},
            {"field": "Year", "type": "quantitative", "format": ","},
            {
              "field": "Yearly % Change",
              "type": "quantitative",
              "title": "Yearly Change (%)"
            }
          ]
        }
      },
          {
              "data": {
          "url": "https://raw.githubusercontent.com/jeeannt/FIT3179/main/Countries%20Population%20from%201995%20to%202020.csv"
        },
        "mark": {
          "type": "text",
          "align": "left",
          "dx": -350,
          "text": ["China and India are few ", "of the countries with the highest", "population throughout the","years 1955-2020"],
          "fontSize": 9.5
        },
        "encoding": {
          "color": {"value": "black"}
          }}
    ],
        "config": { "title": { "font": "sans-serif", "fontSize": 14 } }
  }