{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "data": { "url": "https://raw.githubusercontent.com/jeeannt/FIT3179/main/population_by_country_2020.csv"},
    "transform": [{
        "filter": {"field": "Fert Rate", "valid": "true"}
      },
      {
        "window": [{
          "op": "row_number",
          "as": "rank"
        }],
        "sort": [{ "field": "Fert Rate", "order": "descending" }]
      }, {
        "filter": "datum.rank <= 10"
      }
    ],
    "mark": "bar",
    "encoding": {
      "x": {
          "field": "Fert Rate",
          "type": "quantitative"
      },
      "y": {
          "field": "Country (or dependency)",
          "type": "nominal"
      }
    }
  }
  
